# MySQL database configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root

# If your MySQL root user has a password, fill it in here.
# If it has no password, leave it empty, e.g. DB_PASSWORD=
DB_PASSWORD=your_mysql_password_here

DB_NAME=event_system
DB_CHARSET=utf8mb4

# JWT / Auth config
# 强烈建议生产环境使用随机长字符串，并通过环境变量注入
JWT_SECRET_KEY=change_this_in_real_env
JWT_ALGORITHM=HS256
# 有效期（秒）：默认 7 天，这里可按需调整
JWT_ACCESS_TOKEN_EXPIRES_SECONDS=604800